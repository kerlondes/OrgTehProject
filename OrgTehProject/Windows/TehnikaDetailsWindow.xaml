<Window x:Class="OrgTehProject.Windows.TehnikaDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrgTehProject.Windows"
        mc:Ignorable="d"
        Title="Информация о технике" Height="417" Width="301">
    <Grid Background="#F4E8D3">
        <StackPanel Margin="10">
            <!-- Изображение техники -->
            <Image x:Name="TehnikaImage" Height="101" Stretch="Uniform" Margin="0,0,0,10" />

            <!-- Название техники -->
            <TextBlock x:Name="TehnikaName" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

            <!-- Цена -->
            <TextBlock x:Name="TehnikaPrice" FontSize="14" Margin="0,0,0,10" />

            <!-- Описание -->
            <TextBlock x:Name="TehnikaDescription" TextWrapping="Wrap" Margin="0,0,0,10" Height="122" />

            <!-- Кнопка закрытия -->
            <Button Content="Закрыть" HorizontalAlignment="Center" Click="CloseWindow_Click" Width="93" />
        </StackPanel>
    </Grid>
</Window>
